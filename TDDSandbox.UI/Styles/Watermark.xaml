<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Common.xaml"></ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Watermark textbox -->
    <Style x:Key="DefaultWatermark" TargetType="{x:Type xctk:WatermarkTextBox}" BasedOn="{StaticResource Font15LightGray}">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="BorderBrush" Value="{StaticResource LighterGray}"/>
    </Style>
</ResourceDictionary>